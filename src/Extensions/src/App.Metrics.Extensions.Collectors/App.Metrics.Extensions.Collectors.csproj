<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Description>Metric/Event Collectors for App Metrics e.g. System Usage, GC Events</Description>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>App.Metrics.Extensions.Collectors</RootNamespace>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <PackageTags>appmetrics;metrics</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="App.Metrics" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
        <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" />
    </ItemGroup>
</Project>