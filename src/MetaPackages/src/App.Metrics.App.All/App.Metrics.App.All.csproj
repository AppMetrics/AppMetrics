    <AssemblyTitle>App.Metrics.AspNetCore.All</AssemblyTitle>
    <TargetFrameworks>netstandard2.0;netcoreapp3.1</TargetFrameworks>
    <PackageTags>appmetrics;metrics</PackageTags>
